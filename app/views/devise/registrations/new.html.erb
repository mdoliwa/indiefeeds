<h2 class="text-2xl mb-4">Sign Up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'max-w-xl'}) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class='flex flex-col mb-4'>
    <%= f.label :name %>
    <%= f.text_field :name, autofocus: true, autocomplete: "name", class: 'border border-gray-300 px-2 py-1' %>
  </div>

  <div class='flex flex-col mb-4'>
    <%= f.label :email %>
    <%= f.email_field :email, autocomplete: "email", class: 'border border-gray-300 px-2 py-1' %>
  </div>

  <div class='flex flex-col mb-4'>
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em class='text-sm'>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password", class: 'border border-gray-300 px-2 py-1'%>
  </div>

  <div class='flex flex-col mb-6'>
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'border border-gray-300 px-2 py-1'%>
  </div>

  <div class='mb-2'>
    <%= f.submit "Sign Up", class: 'bg-blue-100 px-3 py-1 md:px-8 border border-blue-900 hover:bg-blue-200 w-full md:w-max'%>
  </div>
<% end %>

<div class='text-base mt-4 underline'>
  <%= render "devise/shared/links" %>
</div>
