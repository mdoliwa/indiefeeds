<h2 class="text-2xl mb-4">Login</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'max-w-xl'}) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class='flex flex-col mb-4'>
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'border border-gray-300 px-2 py-1' %>
  </div>

  <div class='flex flex-col mb-4'>
    <%= f.label :password %>
    <%= f.password_field :password, autocomplete: "current-password" , class: 'border border-gray-300 px-2 py-1' %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class='mb-6'>
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class='mb-2'>
    <%= f.submit "Log in", class: 'bg-blue-100 px-3 py-1 md:px-8 border border-blue-900 hover:bg-blue-200 w-full md:w-max'%>
  </div>
<% end %>

<div class='text-base mt-4 underline'>
  <%= render "devise/shared/links" %>
</div>
