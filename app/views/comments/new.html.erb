<div class='flex mb-3 items-baseline'>
  <span class='text-xl text-gray-400 mr-1'>&#9650;</span>
  <div class='flex-grow'>
    <div class='text-gray-500 text-sm'>
      <%= @parent_comment.user.name %> <%= distance_of_time_in_words(@parent_comment.created_at, Time.zone.now)  %> ago | on: <%= @parent_comment.post.title %>
    </div>

    <div class='text-lg'>
      <%= simple_format @parent_comment.body %>
    </div>

    <%= form_with(model: [@post, @parent_comment, @comment], class: 'mt-6') do |form| %>
      <%= form.hidden_field :parent_id, value: @parent_comment.id %>

      <div class='flex flex-col mb-4 max-w-4xl'>
        <%= form.text_area :body, class: 'border border-gray-300 px-2 py-1', rows: 10 %>
      </div>

      <div>
        <%= form.submit 'Reply', class: 'bg-blue-100 px-6 py-1 border border-blue-900 hover:bg-blue-200' %>
      </div>
    <% end %>
  </div>
</div>
