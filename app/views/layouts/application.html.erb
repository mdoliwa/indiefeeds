<!DOCTYPE html>
<html>
  <head>
    <title>IndieFeeds.com</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="bg-blue-100 px-3 py-2 mb-2 block md:flex items-baseline">
      <%= link_to "IndieFeeds.com", root_path, class: 'text-xl font-medium' %>
      <div class="flex-grow flex justify-between">
        <div class="flex">
          <div class="ml-0 md:ml-4">
            <%= link_to "New posts", new_posts_path, class: "#{current_page?(new_posts_path) && 'text-red-900'}" %> <span class="ml-1 mr-1">|</span>
            <%= link_to "Websites", websites_path, class: "#{current_page?(websites_path) && 'text-red-900'}" %>
            <% if allowed_to?(:create?, Feed) %>
              <span class="ml-1 mr-1">|</span> <%= link_to "New Feed", new_feed_path, class: "#{current_page?(new_feed_path) && 'text-red-900'} whitespace-nowrap" %>
          <% end %>
          </div>
        </div>
        <div>
          <%= render 'devise/menu/registration_items' %>
          <%= render 'devise/menu/login_items' %>
        </div>
      </div>
    </div>

    <div class="text-lg mx-3">
      <%= yield %>
    </div>
  </body>
</html>
